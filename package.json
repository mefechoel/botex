{
  "name": "botex",
  "version": "0.1.0",
  "description": "Obfuscate email addresses and other personal data, so bots can't scrape them",
  "main": "dist/index.umd.js",
  "unpkg": "dist/index.umd.js",
  "module": "dist/index.mjs",
  "types": "types",
  "bin": {
    "botex": "dist/cli.mjs"
  },
  "author": "Michel Strelow @mefechoel",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mefechoel/botex.git"
  },
  "bugs": {
    "url": "https://github.com/mefechoel/botex/issues"
  },
  "homepage": "https://github.com/mefechoel/botex#readme",
  "files": [
    "dist",
    "types"
  ],
  "keywords": [
    "scramble",
    "mail",
    "email",
    "mailto",
    "tel",
    "obfuscation",
    "bots",
    "spam",
    "protection"
  ],
  "sideEffects": false,
  "scripts": {
    "build:lib": "rollup -c",
    "build:types": "tsc src/index.ts src/scramble.ts src/unscramble.ts --noEmit false --emitDeclarationOnly --declaration --declarationDir types",
    "build": "npm run build:lib && npm run build:types",
    "test": "ava --verbose",
    "test:watch": "ava --verbose --watch",
    "lint": "eslint .",
    "verify-build": "npm run lint && npm test && npm run build",
    "start": "vite",
    "build-webapp": "vite build"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "ava": "^4.0.1",
    "commander": "^8.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.66.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5",
    "vite": "^2.7.13"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
